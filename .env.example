# Supabase Configuration (Public)
SUPABASE_URL=https://supabase.doka.team
SUPABASE_KEY=your_supabase_anon_key_here

# Supabase Configuration (Server-only secret)
SUPABASE_SECRET_KEY=your_supabase_service_role_key_here

# Telegram Bot (Public)
TELEGRAM_BOT_USERNAME=PG19CONNECTBOT

# Telegram Bot (Server-only secret)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

